#!/bin/bash
# Environment Variables Configuration
# Copy this file to .env and update the paths for your local environment

# iOS App Binary Paths
# Path to the iOS debug app binary (built with yarn ios)
export IOS_DEBUG_BINARY_PATH=

# Path to the iOS release app binary (built with yarn ios --configuration Release)
export IOS_RELEASE_BINARY_PATH=

# Android App Binary Paths
# Path to the Android debug APK (built with yarn android)
export ANDROID_DEBUG_BINARY_PATH=

# Path to the Android release APK (built with yarn android --variant=release)
export ANDROID_RELEASE_BINARY_PATH=

# React App Source Path
# Path to the Simple QA React App source directory (relative to this project)
export APP_SOURCE_PATH=

