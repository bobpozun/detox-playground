{
  "name": "detox-playground",
  "version": "1.0.0",
  "description": "Detox E2E tests for Simple QA React App",
  "scripts": {
    "test": "detox test --configuration ios.sim.debug",
    "test:android": "detox test --configuration android.emu.debug",
    "test:headless": "detox test --configuration ios.sim.debug --headless",
    "test:single": "detox test --configuration ios.sim.debug --testNamePattern",
    "update-snapshots": "detox test --configuration ios.sim.debug --updateSnapshot",
    "clean": "detox clean-framework-cache && detox clean-build-cache && rm -rf tests/simple_qa_react_app/artifacts tests/simple_qa_react_app/__image_snapshots__ && detox build-framework-cache",
    "lint": "eslint tests/simple_qa_react_app/ utils/ --fix",
    "format": "prettier --write tests/simple_qa_react_app/ utils/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "detox": "^20.42.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/detox": "^18.1.3",
    "@types/jest": "^29.5.0",
    "@types/jest-image-snapshot": "^6.4.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-image-snapshot": "^6.5.1",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true
}
